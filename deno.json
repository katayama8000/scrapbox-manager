{
  "imports": {
    "@/": "./src/",
    "dayjs": "npm:dayjs@1.11.19",
    "dayjs/plugin/timezone.js": "npm:dayjs@1.11.19/plugin/timezone.js",
    "playwright": "npm:playwright@1.58.2",
    "dotenv/load.ts": "https://deno.land/std@0.224.0/dotenv/load.ts",
    "@katayama8000/cosense-client": "jsr:@katayama8000/cosense-client@0.1.7",
    "@google/generative-ai": "npm:@google/generative-ai@0.24.1",
    "std/assert/mod.ts": "https://deno.land/std@0.224.0/assert/mod.ts"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "deno.ns"],
    "strict": true
  },
  "tasks": {
    "daily": "deno run --allow-net --allow-env --allow-read --allow-run --allow-sys --allow-write src/infrastructure/cli/daily-cli.ts",
    "weekly": "deno run --allow-net --allow-env --allow-read --allow-run --allow-sys --allow-write src/infrastructure/cli/weekly-cli.ts",
    "sleepLog": "deno run --allow-net --allow-env --allow-read --allow-run --allow-sys --allow-write src/infrastructure/cli/sleepLog-cli.ts",
    "wake": "deno run --allow-net --allow-env --allow-read --allow-run --allow-sys --allow-write src/infrastructure/cli/wake-cli.ts",
    "countAllPages": "deno run --allow-net --allow-env --allow-read --allow-run --allow-sys --allow-write src/infrastructure/cli/count-pages-cli.ts",
    "tagWip": "deno run --allow-net --allow-env --allow-read --allow-run --allow-sys --allow-write src/infrastructure/cli/tag-wip-articles-cli.ts",
    "pass": "deno lint && deno fmt && deno check **/*.ts && deno test"
  }
}
